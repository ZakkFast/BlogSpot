<article>
    <a href="/dashboard">Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post">
        <div>
            <label for="subject_name">Post Title:</label>
            <input type="text" name="subject_name" value="{{post.subject_name}}"/>
        </div>
        <div>
            <label for="body_content">Post Content</label>
            <input type="text" name="body_content" value="{{post.body_content}}"/>
        </div>
        <div>
            created by you {{format_date post.date_created}}
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="save-btn">Save Post</button>
        <button type="button" class="delete-btn">Delete Post</button>
    </form>
</article>

{{> comments post.comments}}

<script src="/js/deletPost.js"></script>
<script src="/js/editPost.js"></script>

